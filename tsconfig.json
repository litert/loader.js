{
    "compilerOptions": {
        "module": "CommonJS",
        "removeComments": true,
        "preserveConstEnums": true, // 保留 const 和 enum 声明
        "outDir": "dist/",
        "sourceMap": false,
        "target": "ES5",
        "strict": true,             // 严格模式
        "declaration": true,        // d.ts
        "declarationMap": false,
        "newLine": "LF",
        "lib": ["DOM", "ES5", "ES2015.Iterable", "ScriptHost", "ES2015.Promise"]
    }
}